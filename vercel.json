{
  "version": 2,
  "public": false,
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "admin-panel/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin-panel/dist"
      }
    },
    {
      "src": "seller-panel/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "seller-panel/dist"
      }
    },
    {
      "src": "store-front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "store-front/.next"
      }
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/src/server.js"
    },
    {
      "source": "/admin",
      "destination": "/admin-panel/dist/index.html"
    },
    {
      "source": "/admin/:path*",
      "destination": "/admin-panel/dist/:path*"
    },
    {
      "source": "/seller",
      "destination": "/seller-panel/dist/index.html"
    },
    {
      "source": "/seller/:path*",
      "destination": "/seller-panel/dist/:path*"
    }
  ],
  "routes": [
    {
      "src": "/admin/assets/(.*)",
      "dest": "/admin-panel/dist/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/seller/assets/(.*)",
      "dest": "/seller-panel/dist/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin-panel/dist/index.html"
    },
    {
      "src": "/seller/(.*)",
      "dest": "/seller-panel/dist/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/store-front/.next/$1"
    }
  ]
}