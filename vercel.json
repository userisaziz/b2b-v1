{
  "version": 2,
  "public": false,
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "admin-panel/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin-panel/dist"
      }
    },
    {
      "src": "seller-panel/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "seller-panel/dist"
      }
    },
    {
      "src": "store-front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "store-front/.next"
      }
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "admin-panel/dist/$1"
    },
    {
      "src": "/seller/(.*)",
      "dest": "seller-panel/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "store-front/.next/$1"
    }
  ]
}